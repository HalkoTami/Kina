<resources >
    <!-- Base application theme. -->
    <style name="Theme.Tangochoupdated" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightgreen</item>
        <item name="colorPrimaryVariant">@color/darkgreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkgray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface"> @color/blue</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:textViewStyle">@style/TextAppearance.AppCompat.</item>
        <item name="imageButtonStyle">@style/Widget.AppCompat.ImageButton.</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="maxLines">1</item>

    </style>

    <style name="PopUpTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeMinTextSize">5sp</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="PercentageIconTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="FrameLayPercentageIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PopUpButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">11sp</item>
        <item name="autoSizeMinTextSize">3sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/lightgreen</item>
        <item name="android:minHeight">50dp</item>
<!--        <item name="android:minWidth">0dp</item>-->
        <item name="android:maxWidth">0dp</item>
<!--        <item name="android:minWidth">80dp</item>-->
        <item name="android:maxHeight">0dp</item>
<!--        <item name="maxWidth">0dp</item>-->
        <item name="android:minWidth">80dp</item>

    </style>
    <style name="colorPalletCircle">
        <item name="android:minHeight">20dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">3dp</item>
        <item name="android:src">@drawable/circle</item>
    </style>

    <style name="popUpTextViewSmall" parent="Widget.AppCompat.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">2sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_gray</item>

    </style>

    <style name="Widget.AppCompat.ImageButton." parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">5dp</item>

    </style>
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
       <item name="itemIconSize">40dp</item>
        <item name="itemTextColor">@color/darkgray</item>

    </style>
    <style name="TextAppearance.AppCompat." parent="Widget.AppCompat.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color_gray</item>

    </style>
    <style name="MyTextViewStyle" >
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/text_color_gray</item>

    </style>

    <style name="EnumTextviewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>


    </style>
</resources>