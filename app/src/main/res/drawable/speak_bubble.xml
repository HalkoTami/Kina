<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@+id/layer_speak_bubble_content_rec">
    <shape android:shape="rectangle">
      <corners android:radius="10dp"/>
      <solid android:color="@color/black"/>
      <stroke android:width="5dp"
          android:color="@color/white"/>
      <size android:height="100dp"
        android:width="100dp"/>
    </shape>
  </item>
  <item android:top="94dp" android:id="@+id/layer_speak_bubble_polygon_floor">
    <shape android:shape="line">
      <stroke android:color="@color/black"
          android:width="5dp"/>
    </shape>
  </item>
  <item android:id="@+id/layer_speak_bubble_polygon_line_1">
    <rotate android:fromDegrees="45">
      <shape android:shape="line">
        <stroke android:width="5dp"
            android:color="@color/white"/>
      </shape>
    </rotate>

  </item>
  <item android:id="@+id/layer_speak_bubble_polygon_line_2">
    <rotate android:fromDegrees="-45">
      <shape android:shape="line">
        <stroke android:width="5dp"
            android:color="@color/white"/>
      </shape>
    </rotate>

  </item>

</layer-list>
