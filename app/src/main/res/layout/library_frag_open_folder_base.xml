<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.MainActivity"
    android:id="@+id/top_con_lay">




    <FrameLayout
        android:id="@+id/topframelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:elevation="10dp"



        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <FrameLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/top_bar_file_binding"
                layout="@layout/library_frag_top_bar_file"
                android:visibility="visible"/>
        </FrameLayout>


        <include
            android:id="@+id/top_bar_multiselect_binding"
            layout="@layout/library_frag_top_bar_multiselect_mode"
            android:visibility="gone"/>

    </FrameLayout>



    <FrameLayout
        android:id="@+id/lay_search_view"
        android:layout_marginTop="95dp"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">

        <include
            android:id="@+id/binding_search"
            layout="@layout/item_search_bar"
            android:visibility="visible"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay_search_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/anki_box_frag_con_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imv_search_loupe"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_loupe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@id/imv_search_loupe"
                    android:nestedScrollingEnabled="false"
                    android:padding="10dp"
                    android:id="@+id/vocabCardRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/library_frag_rv_item_base" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <include
            android:id="@+id/emptyBinding"
            layout="@layout/library_frag_lay_folder_rv_empty"
            android:visibility="gone"/>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>