<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linLay_anki_box_string_rv_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:contentDescription="@string/cd_anki_box_rv_checkBox"
            android:layout_weight="1"
            android:id="@+id/checkbox_anki_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="10dp"

            android:src="@drawable/selector_anki_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <FrameLayout
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/lineLay_file_data"
        app:layout_constraintStart_toEndOf="@id/linLay_anki_box_string_rv_buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/frameLay_graphs">
        <include
            android:id="@+id/string_content_binding"
            layout="@layout/library_frag_rv_item_card_string"/>
    </FrameLayout>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="5dp"
        android:id="@+id/frameLay_graphs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/lineLay_file_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineLay_file_data"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/imv_anki_rv_card_remembered"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:src="@drawable/selector_remembered"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/txv_anki_rv_remembered_status"
            android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txv_anki_rv_last_flipped"
            android:textSize="11sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>


