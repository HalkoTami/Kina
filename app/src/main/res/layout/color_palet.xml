<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"

    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imv_icon_palet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHeight_max="35dp"
        android:layout_marginEnd="7dp"
        android:src="@drawable/icon_color_palet_col"

        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lineLay_color_palet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_col_red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="7dp"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:src="@drawable/circle"
            app:layout_constraintHeight_max="35dp"
            />

        <ImageView
            android:id="@+id/imv_col_blue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/imv_col_yellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/imv_col_gray"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/circle"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>