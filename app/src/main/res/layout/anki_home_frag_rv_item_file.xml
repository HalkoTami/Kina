<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/gray_stroke_rectangle">
    <ImageView
        android:id="@+id/checkbox_anki_rv"
        android:layout_width="27dp"
        android:layout_height="27dp"


        android:src="@drawable/selector_anki_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/lineLay_file_data"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/checkbox_anki_rv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/lineLay_graphs">
        <ImageView
            app:layout_constraintBottom_toBottomOf="@id/lineLay_file_data"
            app:layout_constraintStart_toEndOf="@id/checkbox_anki_rv"
            app:layout_constraintTop_toTopOf="@id/lineLay_file_data"
            android:contentDescription="@string/cd_file_type"
            android:id="@+id/imv_file_type"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:layout_constraintVertical_weight="1"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_file"

            />
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintStart_toEndOf="@id/imv_file_type"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/frameLay_graphs"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/txv_file_title"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLength="18"
                android:maxLines="2"
                android:textSize="15sp"

                android:text="taitorudにesuyo"

                app:layout_constraintStart_toEndOf="@id/imv_file_type"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLay_children_data"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="@id/lineLay_file_data"

                app:layout_constraintTop_toBottomOf="@id/lineLay_file_data"
                app:layout_constraintBottom_toTopOf="@id/frameLay_graphs">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_file"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"/>
                <TextView
                    android:id="@+id/txv_anki_box_folder_amount"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3個"/>
                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_flashcard"/>
                <TextView
                    android:id="@+id/txv_anki_box_flashCard_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="３個"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_card"/>
                <TextView
                    android:id="@+id/txv_anki_box_Card_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200枚"/>



            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_polygon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lineLay_file_data"
            app:layout_constraintBottom_toBottomOf="@id/lineLay_file_data"/>
    </androidx.appcompat.widget.LinearLayoutCompat>




<!--    <androidx.constraintlayout.widget.Barrier-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/barrier_imv_open"-->
<!--        app:constraint_referenced_ids="linLay_children_data,lineLay_file_data"-->
<!--        app:barrierDirection="end"/>-->

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineLay_file_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineLay_graphs"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/remembered_progress_bar_binding"
                layout="@layout/progress_bar_remembered_rectangle"/>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <include
                android:id="@+id/flipped_progress_bar_binding"
                layout="@layout/progress_bar_flipped"/>
        </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


