<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/anki_box_rv_item_height"
    android:padding="10dp"
    android:background="@drawable/gray_stroke_rectangle">
    <ImageView
        android:contentDescription="@string/cd_anki_box_rv_checkBox"
        android:id="@+id/checkbox_anki_rv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/selector_anki_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_marginEnd="10dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.5"
        android:id="@+id/lineLay_file_data"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@id/checkbox_anki_rv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@id/lineLay_graphs">
        <ImageView
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="@id/lineLay_file_data"
            app:layout_constraintStart_toEndOf="@id/checkbox_anki_rv"
            app:layout_constraintTop_toTopOf="@id/lineLay_file_data"
            android:contentDescription="@string/cd_file_type"
            android:id="@+id/imv_file_type"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            app:layout_constraintVertical_weight="1"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_file"

            />
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintStart_toEndOf="@id/imv_file_type"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/frameLay_graphs"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/txv_file_title"

                style="@style/TxvUniformMiddleStyle"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:layout_constraintStart_toEndOf="@id/imv_file_type"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLay_children_data"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical">
                <ImageView
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_file"
                    tools:ignore="ContentDescription" />
                <TextView
                    style="@style/TxvUniformSmallStyle"
                    android:minWidth="30dp"
                    android:gravity="start|center_vertical"
                    android:id="@+id/txv_anki_box_folder_amount"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_flashcard_flat"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:minWidth="30dp"
                    style="@style/TxvUniformSmallStyle"
                    android:gravity="start|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/txv_anki_box_flashCard_amount"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_card"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:minWidth="30dp"
                    style="@style/TxvUniformSmallStyle"
                    android:gravity="start|center_vertical"
                    android:id="@+id/txv_anki_box_Card_amount"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />



            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_polygon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lineLay_file_data"
            app:layout_constraintBottom_toBottomOf="@id/lineLay_file_data"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineLay_file_data"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.7"
        android:id="@+id/lineLay_graphs"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <include
                android:id="@+id/remembered_progress_bar_binding"
                layout="@layout/progress_bar_remembered_rectangle"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <include
                android:id="@+id/flipped_progress_bar_binding"
                layout="@layout/progress_bar_flipped"/>
        </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


