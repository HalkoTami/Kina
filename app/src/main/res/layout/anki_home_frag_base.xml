<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay">

    <FrameLayout
        style="@style/TopBarFrameLayStyle"
        android:id="@+id/frameLay_top_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/anki_home_frag_top_bar"/>
    </FrameLayout>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linLay_anki_Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/frameLay_top_bar"
        app:layout_constraintBottom_toTopOf="@id/main_frameLayout">
        <ImageView
            android:contentDescription="@string/cd_add_to_favourite_anki_box"
            android:id="@+id/btn_add_to_favourite_anki_box"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/selector_anki_box_favourite"
            app:layout_constraintTop_toTopOf="@id/FrameLay_ring"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLay_ankiBox"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/top_graph"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/FrameLay_ring"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintBottom_toTopOf="@id/imv_anki_box"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <include android:id="@+id/ringBinding"
                    layout="@layout/progress_bar_remembered_ring"/>
            </FrameLayout>

            <ImageView
                android:src="@drawable/icon_inbox"
                android:id="@+id/imv_anki_box"
                app:layout_constraintTop_toBottomOf="@id/FrameLay_ring"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/FrameLay_ring"
                android:layout_width="40dp"

                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="@id/FrameLay_ring"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/top_graph"
            android:layout_width="match_parent"

            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/linLay_anki_Box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">
            <TextView
                style="@style/TxvUniformMiddleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flipped_graph_title"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <FrameLayout
                android:id="@+id/frameLay_flipped_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include android:id="@+id/flipGraphBinding"
                    layout="@layout/progress_bar_flipped"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/frameLay_percentage_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/percentageIconBinding"
                    layout="@layout/percentage_icons"/>
            </FrameLayout>
        </LinearLayout>






    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linLay_anki_Box"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linLay_tabChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toTopOf="@id/frag_con_anki_Box_tab"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                style="@style/TxvTabTitleStyle"
                android:id="@+id/tab_AllFlashCardCover_to_AnkiBox"
                android:layout_marginEnd="20dp"
                android:text="@string/anki_box_tab_title_flashCards" />
            <TextView
                style="@style/TxvTabTitleStyle"
                android:id="@+id/tab_Library_to_AnkiBox"
                android:layout_marginEnd="20dp"
                android:text="@string/anki_box_tab_title_library" />
            <TextView
                style="@style/TxvTabTitleStyle"
                android:id="@+id/tab_Favourites_to_AnkiBox"
                android:text="@string/anki_box_tab_title_favourites" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/frag_con_anki_Box_tab"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linLay_tabChange"
            app:layout_constraintVertical_weight="10"
            app:navGraph="@navigation/anki_box_navigation"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="@color/light_green"
        android:id="@+id/btn_start_anki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:padding="15dp"
        android:minWidth="200dp"
        app:layout_constraintVertical_bias="0.98"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />





</androidx.constraintlayout.widget.ConstraintLayout>