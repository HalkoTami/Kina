<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay">



    <FrameLayout
        android:id="@+id/topframelayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="10dp"
        android:background="@color/white"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            layout="@layout/anki_home_frag_top_bar"/>
    </FrameLayout>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linLay_anki_Box"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/topframelayout"
        app:layout_constraintBottom_toTopOf="@id/main_frameLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conLayankiBox"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/top_graph"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_heart"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ProgressBar

                android:indeterminateOnly="false"
                android:max="100"

                android:progressDrawable="@drawable/ring_anki_box"
                android:id="@+id/ring_anki_box"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toTopOf="@id/imv_anki_box"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/imv_remembered_end_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/group_2"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/ring_anki_box"
                app:layout_constraintEnd_toEndOf="@id/ring_anki_box"
                app:layout_constraintBottom_toBottomOf="@id/ring_anki_box"
                app:layout_constraintTop_toTopOf="@id/ring_anki_box"

                />
            <TextView
                android:id="@+id/txv_inside_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/ring_anki_box"
                app:layout_constraintEnd_toEndOf="@id/ring_anki_box"
                app:layout_constraintBottom_toBottomOf="@id/ring_anki_box"
                app:layout_constraintTop_toTopOf="@id/ring_anki_box"/>
            <ImageView
                android:id="@+id/imv_anki_box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/ring_anki_box"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_inbox"
                app:layout_constraintStart_toStartOf="@id/ring_anki_box" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/top_graph"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/linLay_anki_Box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <include
                android:id="@+id/anki_box_graph_binding"
                layout="@layout/anki_home_frag_data_graph_large"/>
        </FrameLayout>






    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linLay_anki_Box"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linLay_tabChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toTopOf="@id/anki_box_frag_con_view"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tab_AllFlashCardCover_to_AnkiBox"
                android:layout_marginEnd="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="すべての単語帳"
                android:gravity="center"
                android:background="@drawable/selector_tab_rectangle"/>
            <TextView
                android:id="@+id/tab_Library_to_AnkiBox"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="ライブラリ"
                android:background="@drawable/selector_tab_rectangle"/>
            <TextView
                android:id="@+id/tab_Favourites_to_AnkiBox"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="お気に入り"
                android:background="@drawable/selector_tab_rectangle"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/anki_box_frag_con_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linLay_tabChange"
            app:navGraph="@navigation/anki_box_navigation"
            android:name="androidx.navigation.fragment.NavHostFragment"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        android:id="@+id/gl_btn_start_anki_bottom"/>
    <TextView
        android:id="@+id/imv_search_loupe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/plane_green_button"
        android:elevation="10dp"
        android:padding="15dp"
        android:text="カードを選ばすに暗記を開始"

        android:textColor="@color/most_dark_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/gl_btn_start_anki_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <FrameLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/main_frameLayout"
        app:layout_constraintEnd_toEndOf="@id/main_frameLayout"
        app:layout_constraintTop_toTopOf="@id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="@id/main_frameLayout"
        android:background="@drawable/gray_stroke_rectangle"
        android:elevation="10dp">
        <include android:id="@+id/confirm_delete_popUp"
            layout="@layout/anki_home_frag_popup_anki_setting_base"/>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>