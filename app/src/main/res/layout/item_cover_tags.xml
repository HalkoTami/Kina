<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">
    <ImageView
        android:id="@+id/imv_icon_tag"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:ignore="contentDescription"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/icon_tag"/>
    <TextView
        android:id="@+id/txv_tag"
        app:layout_constraintStart_toEndOf="@id/imv_icon_tag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edt_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />

    <ImageButton
        android:contentDescription="@string/cd_edit_tag"
        android:id="@+id/btn_edt_tag"
        app:layout_constraintStart_toEndOf="@id/txv_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_cover" />


</androidx.constraintlayout.widget.ConstraintLayout>