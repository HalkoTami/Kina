<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="105dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@drawable/gray_stroke_corner_10">
<!--TODO constraint set ね-->
    <ImageView
        android:id="@+id/imv_file_type"
        android:layout_margin="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_file" />

    <TextView
        android:id="@+id/txv_file_title"
        android:layout_marginStart="10dp"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:maxLength="18"
        android:maxLines="2"
        android:textSize="20sp"

        app:layout_constraintBottom_toTopOf="@id/imv_icon_file_small"

        app:layout_constraintEnd_toStartOf="@+id/btn_add"

        app:layout_constraintStart_toEndOf="@+id/imv_file_type"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_container"
        app:layout_constraintStart_toEndOf="@id/imv_file_type"
        app:layout_constraintTop_toBottomOf="@id/txv_file_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv_icon_file_small"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon_file_1"

            android:drawingCacheQuality="auto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txv_file_amount"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_file_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"

            android:text="30de枚"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imv_icon_tango_cho_small"
            app:layout_constraintStart_toEndOf="@+id/imv_icon_file_small"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_icon_tango_cho_small"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon_library"
            android:drawingCacheQuality="auto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imv_icon_card_small"
            app:layout_constraintStart_toEndOf="@id/txv_file_amount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_tango_cho_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingLeft="10dp"
            android:text="枚"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imv_icon_card_small"
            app:layout_constraintStart_toEndOf="@+id/imv_icon_tango_cho_small"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imv_icon_card_small"
            android:layout_width="wrap_content"


            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/icon_create_card"
            android:drawingCacheQuality="auto"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@id/txv_tango_cho_amount"
            app:layout_constraintEnd_toStartOf="@id/txv_card_amount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_card_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:text="30dd枚"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imv_icon_card_small"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_add_middlesize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>







</androidx.constraintlayout.widget.ConstraintLayout>

