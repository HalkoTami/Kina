<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@drawable/gray_stroke_corner_10">
<!--TODO constraint set ね-->
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_file" />
    <TextView
        android:id="@+id/txvfiletitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"

        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:maxLength="18"
        android:maxLines="2"
        android:text="タイトル"
        android:textSize="20dp"
        android:textColor="@color/text_color_gray"
        />
    <TextView
        android:id="@+id/txtv_file_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="30枚" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@drawable/icon_library" />

    <TextView
        android:id="@+id/txtv_tangocho_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="30枚" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@drawable/icon_file_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@drawable/icon_create_card" />

    <TextView
        android:id="@+id/txtv_card_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="30枚" />




</androidx.constraintlayout.widget.ConstraintLayout>

