<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="match_parent"
    android:maxHeight="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="false"
    android:background="@drawable/gray_stroke_corner_10"
    android:layout_gravity="center_vertical">

    <ImageView

        android:id="@+id/imv_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_anki_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imv_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_edit_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imv_3"
        app:layout_constraintStart_toEndOf="@id/imv_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_delete_cover"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>