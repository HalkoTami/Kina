<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >





        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/SettingLineLayStyle"
            android:id="@+id/conLay_filter_setting"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_filter_setting"
            app:layout_constraintBottom_toTopOf="@id/txv_auto_flip">
            <androidx.appcompat.widget.LinearLayoutCompat
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/lineLay_title"
                style="@style/SettingLineLayStyle"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="end|center_vertical">
                <TextView
                    style="@style/TxvUniformMiddleStyle"
                    android:gravity="end|center_vertical"
                    android:id="@+id/txv_filter_setting"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/anki_setting_txv_filter" />

                <ImageView
                    android:id="@+id/imv_filter_option_visibility"
                    android:layout_width="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/selector_polygon"
                    tools:ignore="ContentDescription" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier_enum_left"
                app:barrierDirection="start"
                app:constraint_referenced_ids=
                    "linLay_filter_typed_answer,lineLay_filter_flag,lineLay_filter_remember_status"/>

            <ImageView
                android:contentDescription="@string/anki_setting_checkBox_missed_filter"
                android:id="@+id/checkbox_filter_typed_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/selector_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/linLay_filter_typed_answer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/linLay_filter_typed_answer" />

            <ImageView
                android:contentDescription="@string/anki_setting_checkBox_missed_remembered"
                android:id="@+id/checkbox_filter_card_remember_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/lineLay_filter_remember_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/lineLay_filter_remember_status" />

            <ImageView
                android:contentDescription="@string/anki_setting_checkBox_flag"
                android:id="@+id/checkbox_filter_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/lineLay_filter_flag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/lineLay_filter_flag" />

            <FrameLayout
                android:id="@+id/linLay_filter_typed_answer"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/checkbox_filter_typed_answer"
                app:layout_constraintTop_toBottomOf="@id/lineLay_title">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/checkbox_filter_typed_answer"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txv_filter_typed_answer_missed"
                        style="@style/EnumTextviewStyle"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_txv_rectangle_left"
                        android:lines="2"
                        android:text="@string/anki_setting_filter_answer_missed"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_filter_typed_answer"
                        app:layout_constraintStart_toEndOf="@id/checkbox_filter_typed_answer"
                        app:layout_constraintTop_toTopOf="@id/checkbox_filter_typed_answer" />

                    <TextView
                        style="@style/EnumTextviewStyle"
                        android:gravity="center"
                        android:id="@+id/txv_filter_typed_answer_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_txv_rectangle_right"
                        android:maxLines="2"
                        android:textColor="@color/selectable_txv_color"
                        android:text="@string/anki_setting_filter_answer_correct"
                        app:layout_constraintStart_toEndOf="@id/txv_filter_typed_answer_missed"

                        app:layout_constraintTop_toTopOf="@id/txv_filter_typed_answer_missed" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>
            <FrameLayout

                android:id="@+id/lineLay_filter_remember_status"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/checkbox_filter_card_remember_status"
                app:layout_constraintTop_toBottomOf="@id/linLay_filter_typed_answer">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/checkbox_filter_card_remember_status"
                    app:layout_constraintTop_toBottomOf="@id/linLay_filter_typed_answer">

                    <TextView
                        style="@style/EnumTextviewStyle"
                        android:id="@+id/txv_filter_card_not_remembered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="@drawable/selector_txv_rectangle_left"
                        android:padding="5dp"
                        android:text="@string/anki_setting_filter_not_remembered"
                        android:textColor="@color/selectable_txv_color"
                        />

                    <TextView
                        style="@style/EnumTextviewStyle"
                        android:layout_weight="1"
                        android:id="@+id/txv_filter_card_remembered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:background="@drawable/selector_txv_rectangle_right"
                        android:text="@string/anki_setting_filter_remembered"
                        android:textColor="@color/selectable_txv_color"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>


            <FrameLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/lineLay_filter_flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/checkbox_filter_flag"
                app:layout_constraintTop_toBottomOf="@id/lineLay_filter_remember_status">
                <androidx.appcompat.widget.LinearLayoutCompat

                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/checkbox_filter_flag"
                    app:layout_constraintTop_toBottomOf="@id/lineLay_filter_remember_status">

                    <TextView
                        style="@style/EnumTextviewStyle"
                        android:id="@+id/txv_filter_with_flag"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_txv_rectangle_left"
                        android:text="@string/anki_setting_filter_with_flag"
                        android:textColor="@color/selectable_txv_color"
                        />

                    <TextView
                        style="@style/EnumTextviewStyle"
                        android:layout_weight="1"
                        android:id="@+id/txv_filter_without_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_txv_rectangle_right"
                        android:text="@string/anki_setting_filter_without_flag"
                        android:textColor="@color/selectable_txv_color" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </FrameLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            style="@style/SettingLineLayStyle"
            android:layout_width="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center">
                <ImageView
                    android:contentDescription="@string/cd_checkBox"
                    android:id="@+id/checkbox_auto_flip"
                    android:layout_marginEnd="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_checkbox"/>

                <TextView
                    style="@style/TxvUniformMiddleStyle"
                    android:gravity="center"
                    android:id="@+id/txv_auto_flip"
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="@string/anki_setting_auto_flip"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:minWidth="20dp" />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:minWidth="80dp"
                    android:id="@+id/line_lay_auto_flip_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@id/checkbox_auto_flip"
                    app:layout_constraintTop_toBottomOf="@id/conLay_filter_setting"
                    android:background="@drawable/gray_stroke_rectangle"
                    android:padding="10dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:maxLength="2"
                        style="@style/TxvUniformMiddleStyle"
                        android:inputType="time"
                        android:id="@+id/edt_auto_flip_seconds"
                        android:background="@android:color/transparent"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor"
                        android:text="20"/>
                    <TextView
                        style="@style/TxvUniformSmallStyle"

                        android:text="@string/anki_setting_auto_flip_seconds"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/SettingLineLayStyle"
        android:gravity="center">
        <ImageView
            android:contentDescription="@string/cd_checkBox"
            android:id="@+id/checkbox_type_answer"
            android:layout_marginEnd="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_checkbox"/>

        <TextView
            style="@style/TxvUniformMiddleStyle"
            android:id="@+id/txv_type_answer"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="@string/anki_setting_type_answer" />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/SettingLineLayStyle"
        android:gravity="center">
        <ImageView
            android:contentDescription="@string/cd_checkBox"
        android:id="@+id/checkbox_reverse_sides"
        app:layout_constraintTop_toTopOf="@id/txv_reverse_sides"
        app:layout_constraintStart_toStartOf="@id/checkbox_auto_flip"
        app:layout_constraintBottom_toBottomOf="@id/txv_reverse_sides"
        android:layout_marginEnd="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_checkbox"/>

        <TextView
            style="@style/TxvUniformMiddleStyle"
            android:id="@+id/txv_reverse_sides"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/anki_setting_reverse_sides"
            />




        </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>
