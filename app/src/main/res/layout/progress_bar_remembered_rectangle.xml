<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frameLay_progressbar_remembered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical"

            android:id="@+id/progressbar_remembered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:indeterminateOnly="false"
            android:progress="0"
            android:background="@drawable/rectangle_progressbar"
            android:backgroundTint="@color/light_gray"
            android:progressTint="@color/light_green"
            android:progressDrawable="@drawable/custom_progress_bar_rectangle"
            />

        <ImageView

            android:id="@+id/imv_remembered_end_icon"
            android:layout_width="20dp"
            android:layout_height="match_parent"

            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_remembered_selectable"

            android:translationX="0dp"
            android:contentDescription="TODO" />
    </FrameLayout>

</layout>