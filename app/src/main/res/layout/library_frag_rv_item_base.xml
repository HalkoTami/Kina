<?xml version="1.0" encoding="utf-8"?>

<layout >
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"

    android:id="@+id/lib_rv_base_container">


    <ImageView
        android:id="@+id/btn_select"
        android:contentDescription="@string/btn_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/content_binding_frame"
        app:layout_constraintEnd_toStartOf="@+id/content_binding_frame"

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/select_rv_item"
        android:layout_marginEnd="5dp"
        android:visibility="gone"

        />



    <FrameLayout
        android:id="@+id/content_binding_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/linLay_swipe_show"
        app:layout_constraintStart_toEndOf="@+id/btn_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_add_new_card">





    </FrameLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linLay_swipe_show"
        app:layout_constraintTop_toTopOf="@id/content_binding_frame"
        app:layout_constraintStart_toEndOf="@id/content_binding_frame"
        app:layout_constraintBottom_toBottomOf="@id/content_binding_frame"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:contentDescription="@string/btn_edit"
            android:tag="@string/gone_on_long_click"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_edit_whole"
            android:src="@drawable/icon_edit"
            android:visibility="visible"/>


        <ImageView
            android:contentDescription="@string/delete"
            android:tag="@string/gone_on_long_click"

            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_trash"
            android:visibility="visible"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>








    <ImageView
        android:contentDescription="@string/add_new_card"
        android:tag="@string/gone_on_long_click"
        android:id="@+id/btn_add_new_card"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/content_binding_frame"
        app:layout_constraintTop_toBottomOf="@id/content_binding_frame"
        android:layout_height="20dp"
        android:layout_margin="3dp"
        android:layout_width="20dp"
        android:src="@drawable/icon_add"
        android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>






