<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.library.HomeFragment">


        <FrameLayout
            android:id="@+id/topframelayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="10dp"
            android:background="@color/white"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <include
                android:id="@+id/top_menu_bar_frame"
                layout="@layout/item_top_menu_bar"/>
        </FrameLayout>
    <FrameLayout
        android:id="@+id/lay_search_view"
        app:layout_constraintTop_toBottomOf="@id/topframelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="8dp">
        <include
            android:id="@+id/binding_search"
            layout="@layout/item_search_bar"/>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay_search_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="10dp"
                    android:id="@+id/vocabCardRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_cover_card_base" />
            </FrameLayout>

        </ScrollView>

        <include
            android:id="@+id/emptyBinding"
            layout="@layout/empty"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popup_confirm_delete"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/rectangle_green_stroke"
        app:layout_constraintTop_toTopOf="@id/main_frameLayout"
        app:layout_constraintStart_toStartOf="@id/main_frameLayout"
        app:layout_constraintBottom_toBottomOf="@id/main_frameLayout"
        app:layout_constraintEnd_toEndOf="@id/main_frameLayout"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:id="@+id/txv_confirm_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中身もすべて消去しますか？"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_commit_delete"/>
        <Button
            android:id="@+id/btn_commit_delete"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="削除する"
            app:layout_constraintStart_toEndOf="@id/btn_denial"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/btn_denial"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="キャンセル"
            app:layout_constraintEnd_toStartOf="@id/btn_commit_delete"
            app:layout_constraintBottom_toBottomOf="@id/btn_commit_delete"
            app:layout_constraintStart_toStartOf="@id/txv_confirm_delete"/>
        <ImageView
            android:id="@+id/btn_close_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icon_close"
            android:layout_margin="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>