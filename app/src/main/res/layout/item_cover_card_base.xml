<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/btn_select"
        android:contentDescription="@string/btn_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/data_frame"
        app:layout_constraintEnd_toStartOf="@+id/data_frame"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:src="@drawable/circle_select"
        android:layout_marginEnd="5dp"

        />


    <FrameLayout
        android:id="@+id/data_frame"
        android:layout_width="0dp"
        android:layout_height="105dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintStart_toEndOf="@+id/btn_select"
        app:layout_constraintTop_toTopOf="parent">

        <ViewStub
            android:id="@+id/stub_string_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/stub_string_card"
            android:layout="@layout/item_cover_card_string"
            tools:visibility="invisible" />

        <ViewStub
            android:id="@+id/stub_marker_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/stub_marker_card"

            android:layout="@layout/item_cover_card_marker" />

        <ViewStub
            android:id="@+id/stub_quiz_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:inflatedId="@+id/stub_quiz_card"
            android:layout="@layout/item_cover_card_quiz" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_gone_on_long_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_tags="@string/gone_on_long_click"/>

    <ImageView
        android:contentDescription="@string/btn_edit"
        android:tag="@string/gone_on_long_click"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_edit_whole"
        android:src="@drawable/icon_edit_cover"
        app:layout_constraintEnd_toEndOf="@id/btn_delete"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete"
        app:layout_constraintStart_toStartOf="@+id/btn_delete"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:contentDescription="@string/delete"
        android:tag="@string/gone_on_long_click"
        app:layout_constraintStart_toEndOf="@+id/data_frame"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_whole"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/data_frame"
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/icon_delete_cover"
        android:visibility="visible"
        />


    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        android:id="@+id/barrier_bottom_half"
        app:constraint_referenced_ids="btn_add_new_card,stub_tag"/>



    <ImageView
        android:contentDescription="@string/add_new_card"
        android:tag="@string/gone_on_long_click"
        android:id="@+id/btn_add_new_card"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/data_frame"
        app:layout_constraintTop_toBottomOf="@id/data_frame"
        android:layout_height="37dp"
        android:layout_marginEnd="5dp"
        android:layout_width="20dp"
        android:src="@drawable/icon_add_middlesize" />
    <ViewStub
        android:tag="@string/gone_on_long_click"
        android:id="@+id/stub_tag"
        android:inflatedId="@+id/stub_tag"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout="@layout/item_cover_tags"
        tools:visibility="visible"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/data_frame"
        app:layout_constraintStart_toStartOf="@id/data_frame"
        app:layout_constraintEnd_toStartOf="@id/btn_add_new_card"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



