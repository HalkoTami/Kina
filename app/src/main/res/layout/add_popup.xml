<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_green_stroke"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/imv_file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_file"
        app:layout_constraintStart_toStartOf="@id/edt_createfile"

        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/edt_createfile"/>
    <TextView
        android:id="@+id/txv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新しいファイルをつくる"
        android:textSize="13dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imv_file_type"
        app:layout_constraintBottom_toBottomOf="@id/imv_file_type"
        app:layout_constraintTop_toTopOf="@id/imv_file_type"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ファイルの名前 >"/>

    <EditText
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/edt_createfile"
        android:background="@drawable/searchview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:layout_margin="15dp"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:hint="タイトル"/>


        <ImageView
            android:id="@+id/imv_icon_palet"
            app:layout_constraintStart_toStartOf="@id/edt_createfile"
            app:layout_constraintTop_toBottomOf="@id/edt_createfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="35dp"
            android:src="@drawable/icon_color_palet_col"
            android:layout_marginTop="10dp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/imv_icon_palet"
            app:layout_constraintTop_toTopOf="@id/imv_icon_palet"
            app:layout_constraintStart_toEndOf="@id/imv_icon_palet"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_col_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="7dp"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:src="@drawable/circle"
                app:layout_constraintHeight_max="35dp"
                app:tint="@color/red" />

            <ImageView
                android:id="@+id/imv_col_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/circle"
                app:tint="@color/blue" />

            <ImageView
                android:id="@+id/imv_col_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/circle"
                app:tint="@color/yellow" />

            <ImageView
                android:id="@+id/imv_col_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/circle"
                app:tint="@color/light_gray" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/btn_create_file"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_light_green"
        android:text="作成"
        android:layout_margin="15dp"
        android:textColor="@color/text_color_gray"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>