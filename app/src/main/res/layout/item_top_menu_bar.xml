<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxHeight="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/imv_FileStatus_OrClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:src="@drawable/icon_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_FileStatus_OrClose"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_switch_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_margin="10dp"

        android:src="@drawable/icon_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:background="@color/white"
        android:id="@+id/lay_end"
        android:layout_marginEnd="15dp"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/imv_switch_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <include
            android:id="@+id/menu_binding"
            layout="@layout/menu_layout"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>