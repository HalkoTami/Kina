<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLay_graphs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linLay_children_data"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="10dp"

    >


    <TextView
        android:id="@+id/txv_remembered_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="2"
        android:text="暗記\n完了"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/frameLay_progressbar_remembered"
        app:layout_constraintEnd_toStartOf="@id/frameLay_progressbar_remembered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frameLay_progressbar_remembered" />

    <FrameLayout
        android:id="@+id/frameLay_progressbar_remembered"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txv_remembered_progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frameLay_flipped_progress"
        app:layout_constraintVertical_weight="1">
        <ProgressBar
            android:id="@+id/progressbar_remembered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:max="100"
            android:indeterminateOnly="false"
            android:progress="60"
            android:background="@drawable/rectangle_progressbar"
            android:backgroundTint="@color/light_gray"
            android:progressTint="@color/darkgreen"
            android:progressDrawable="@drawable/custome_progress_bar_rectangle"
            />
        <TextView
            android:id="@+id/txv_remembered_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70%"
            android:layout_marginStart="5dp" />
        <ImageView
            android:id="@+id/imv_remembered_end_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/group_2"
            android:layout_marginEnd="-20dp"

            />
    </FrameLayout>




    <TextView
        android:id="@+id/txv_opened_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/frameLay_flipped_progress"
        app:layout_constraintBottom_toBottomOf="@id/frameLay_flipped_progress"
        app:layout_constraintEnd_toStartOf="@id/frameLay_flipped_progress"
        android:layout_marginEnd="10dp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="開いた\n回数"/>

    <FrameLayout
        android:id="@+id/frameLay_flipped_progress"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="0dp"

        app:layout_constraintVertical_weight="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/frameLay_percentage_icons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/frameLay_progressbar_remembered"
        app:layout_constraintTop_toBottomOf="@id/frameLay_progressbar_remembered" >
        <include layout="@layout/progress_bar_flipped"/>



    </FrameLayout>
    <FrameLayout
        android:id="@+id/frameLay_percentage_icons"
        android:layout_width="0dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@id/frameLay_flipped_progress"
        app:layout_constraintEnd_toEndOf="@id/frameLay_flipped_progress"
        app:layout_constraintTop_toBottomOf="@id/frameLay_flipped_progress">

        <FrameLayout
            android:id="@+id/once_percentage"
            android:layout_width="30dp"
            android:layout_height="20dp"
            app:layout_constraintVertical_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/percentage_container" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:paddingTop="2dp"
                android:text="100"
                android:textSize="11sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/twice_percentage"
            android:layout_width="30dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/percentage_container" />
            <TextView
                android:paddingTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:textSize="11sp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/three_percentage"
            android:layout_width="30dp"
            android:layout_height="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/percentage_container" />
            <TextView
                android:paddingTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:textSize="11sp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/four_above_percentage"
            android:layout_width="30dp"
            android:layout_height="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/percentage_container" />
            <TextView
                android:paddingTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:textSize="11sp"/>
        </FrameLayout>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


