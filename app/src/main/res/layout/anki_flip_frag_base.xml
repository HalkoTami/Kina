<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay">



    <FrameLayout
        android:id="@+id/frameLay_top_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="10dp"
        android:background="@color/white"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/top_binding"
            layout="@layout/anki_flip_frag_top_bar"/>
    </FrameLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragConView_flip"
        android:layout_width="match_parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/flip_navigation"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frameLay_top_bar"
        app:layout_constraintBottom_toTopOf="@id/linLay_flip_bottom"
        >
    </androidx.fragment.app.FragmentContainerView>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linLay_flip_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragConView_flip"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/imv_flip_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/custom_progressbar"
            app:layout_constraintBottom_toTopOf="@id/linLay_bottom"
            app:layout_constraintTop_toBottomOf="@id/fragConView_flip">

            <include android:id="@+id/progress_bar_binding"
                layout="@layout/progress_bar_remembered_rectangle"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/linLay_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/btn_flip_previous"

                android:layout_gravity="start"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_move"/>
            <ImageView
                android:id="@+id/btn_add_card"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_add"/>
            <ImageView
                android:rotation="180"
                android:id="@+id/btn_flip_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_move"
                android:layout_gravity="end"
                android:layout_weight="1"/>


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.example.tangochoupdated.db.enumclass.ImvChangeAlphaOnSelect
        android:id="@+id/btn_remembered"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:src="@drawable/selector_remembered"
        app:layout_constraintBottom_toBottomOf="@id/fragConView_flip"
        app:layout_constraintEnd_toEndOf="@id/fragConView_flip"/>
    <com.example.tangochoupdated.db.enumclass.ImvChangeAlphaOnSelect
        android:id="@+id/btn_setFlag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/selector_flag"
        app:layout_constraintBottom_toBottomOf="@id/btn_remembered"
        app:layout_constraintEnd_toStartOf="@id/btn_remembered"
        app:layout_constraintTop_toTopOf="@id/btn_remembered"
        android:layout_marginEnd="10dp"/>
    <com.example.tangochoupdated.db.enumclass.ImvChangeAlphaOnDown
        android:id="@+id/imv_edit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit"
        app:layout_constraintTop_toTopOf="@+id/fragConView_flip"
        app:layout_constraintEnd_toEndOf="@id/fragConView_flip"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/txv_countDown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:text="13"
        android:gravity="center"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.2"
        android:layout_margin="10dp"

        app:layout_constraintBottom_toTopOf="@id/linLay_flip_bottom"

        app:layout_constraintStart_toStartOf="parent"
        />
    <com.example.tangochoupdated.db.enumclass.ImvChangeAlphaOnSelect
        android:id="@+id/btn_stop_count"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.08"

        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/txv_countDown"
        app:layout_constraintTop_toTopOf="@id/txv_countDown"
        app:layout_constraintStart_toEndOf="@id/txv_countDown"
        android:src="@drawable/selector_stop_count"/>





</androidx.constraintlayout.widget.ConstraintLayout>