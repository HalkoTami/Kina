<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    android:background="@drawable/gray_stroke_corner_10">

<!--TODO 文字数制限　行制限-->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="txv_front_title,txv_back_title" />


    <TextView
        android:id="@+id/txv_front_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barrier_title"

        android:gravity="center"
         />
    <TextView
        android:id="@+id/txv_front_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/line_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edt_front"
        app:layout_constraintBottom_toTopOf="@id/line_horizontal"

        android:gravity="center_vertical"

         />
    <TextView
        android:id="@+id/txv_back_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barrier_title"
         />
    <TextView
        android:id="@+id/txv_back_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_vertical"
        app:layout_constraintEnd_toStartOf="@id/btn_edt_back"
        app:layout_constraintTop_toBottomOf="@id/line_horizontal"
        android:gravity="center_vertical"
         />
    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/line_horizontal"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="3dp"
        android:src="@drawable/gray_stroke_rectangle"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/line_vertical"
        app:constraint_referenced_ids="txv_back_title,txv_front_title"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/gray_stroke_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier_title"

        />
    <ImageView
        android:contentDescription="@string/edt_front"

        android:id="@+id/btn_edt_front"
        app:layout_constraintBottom_toTopOf="@id/line_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txv_front_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_cover"
        android:layout_margin="5dp"/>
    <ImageView
        android:contentDescription="@string/edt_back"
        android:id="@+id/btn_edt_back"
        app:layout_constraintStart_toEndOf="@id/txv_back_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_edit_cover"
        android:layout_margin="5dp"/>







</androidx.constraintlayout.widget.ConstraintLayout>


