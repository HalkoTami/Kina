<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:background="@drawable/gray_stroke_corner_10">


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="txv_front_title,txv_back_title" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="txv_front_title,txv_front_text"
        />

    <TextView
        android:id="@+id/txv_front_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barrier_title"

        android:gravity="center"
        android:text="title"
        android:textColor="@color/mostdarkgray"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/txv_front_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/line_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_horizontal"

        android:gravity="center_vertical"
        android:text="表"
        android:textColor="@color/mostdarkgray"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/txv_back_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/line_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line_vertical"
        android:text="backdsd"
        android:textColor="@color/mostdarkgray"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/txv_back_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_horizontal"
        android:gravity="center_vertical"
        android:text="backtext"
        android:textColor="@color/mostdarkgray"
        android:textSize="13sp" />
    <ImageView
        android:id="@+id/line_horizontal"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="3dp"
        android:src="@drawable/gray_stroke_rectangle"/>

    <ImageView
        android:id="@+id/line_vertical"
        app:constraint_referenced_ids="txv_back_title,txv_front_title"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:src="@drawable/gray_stroke_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/barrier_title"

        />


