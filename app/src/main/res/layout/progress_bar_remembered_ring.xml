<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/frameLay_flipped_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        >

        <ProgressBar

            android:indeterminateOnly="false"
            android:max="100"

            android:progressDrawable="@drawable/ring_anki_box"
            android:id="@+id/ring_progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/txv_inside_ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/imv_remembered_end_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_remembered_selectable"
            android:visibility="invisible"
            android:layout_gravity="center"

            tools:ignore="ContentDescription"
            />


    </FrameLayout>

</layout>