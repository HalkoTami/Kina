<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_green_stroke"
    android:orientation="vertical"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="保存しますか?"
        android:id="@+id/edt_createfile"
        android:background="@drawable/searchview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:layout_margin="15dp"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:hint="タイトル"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/edt_createfile"
            app:layout_constraintTop_toBottomOf="@id/edt_createfile"/>


    <Button
        android:id="@+id/btn_create_file"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rectangle_light_green"
        android:text="保存"
        android:textColor="@color/text_color_gray"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>