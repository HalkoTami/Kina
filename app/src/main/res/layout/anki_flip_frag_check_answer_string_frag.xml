<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay"
    android:padding="10dp">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.11"
        android:id="@+id/linLay_answer_result"
        android:padding="5dp">
        <ImageView
            android:id="@+id/imv_tosaka"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:src="@drawable/tosaka_falling"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:text="残念\n不正解!"
        android:lines="2"
        android:gravity="center"
        android:autoSizeTextType="uniform"
           >

            <TextView
                android:id="@+id/txv_speak_bubble_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imv_speak_bubble_polygon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:lines="2"
                android:autoSizeTextType="uniform"
                android:padding="10dp"
                android:gravity="center"
                android:text="残念、\n不正解..."
                android:background="@drawable/gray_stroke_rectangle"/>
            <ImageView
                android:translationX="3dp"
                android:translationY="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintEnd_toStartOf="@id/txv_speak_bubble_content"
                android:id="@+id/imv_speak_bubble_polygon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/speak_bubble_polygon"
                android:rotation="180" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/gray_stroke_rectangle">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLay_in_row"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/linLay_result_data"
                app:layout_constraintHeight_percent="0.3"


                app:layout_constraintTop_toTopOf="parent">
                <ImageView

                    android:id="@+id/imv_result_in_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_remembered_selected"/>
                <TextView
                    android:id="@+id/txv_result_in_row"
                    android:layout_width="wrap_content"

                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:layout_height="match_parent"
                    android:text="不正解２連続中"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linLay_result_data"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.8"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linLay_in_row">
                <ProgressBar

                    android:layout_gravity="center_vertical"
                    android:id="@+id/progressbar_answer_correct"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="10dp"
                    android:max="100"
                    android:indeterminateOnly="false"
                    android:progress="60"
                    android:background="@drawable/rectangle_progressbar"
                    android:backgroundTint="@color/light_gray"
                    android:progressTint="@color/yellow"
                    android:progressDrawable="@drawable/custome_progress_bar_rectangle"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:text="22/30"/>
            </androidx.appcompat.widget.LinearLayoutCompat>





        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/txv_correct_answer"

        app:layout_constraintTop_toBottomOf="@id/linLay_answer_result"
        android:background="@drawable/gray_stroke_rectangle"
        android:autoSizeTextType="uniform"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A.　１９８０年"
        android:textSize="25sp"
        android:gravity="center"
        android:maxLines="50" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/txv_correct_answer"
        android:background="@drawable/gray_stroke_rectangle"
        android:id="@+id/txv_your_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="あなたの回答" />



</androidx.constraintlayout.widget.ConstraintLayout>