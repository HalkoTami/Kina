<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay"
    android:padding="10dp">



    <TextView
        android:id="@+id/txv_flip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="答え"
        android:textSize="20sp"
        android:padding="10dp"
        android:background="@drawable/gray_stroke_rectangle"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrv_question"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintTop_toBottomOf="@id/txv_flip_title"
        android:background="@drawable/gray_stroke_rectangle"
        app:layout_constraintBottom_toTopOf="@id/scrv_typed_answer">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="koic\kkkkk\\nh"
                android:textSize="25sp"
                android:gravity="center"
                android:maxLines="50" />
        </FrameLayout>


    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/scrv_type_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/scrv_typed_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/circle_select" />

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:id="@+id/scrv_typed_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gray_stroke_rectangle"
        app:layout_constraintTop_toBottomOf="@id/scrv_question"
        app:layout_constraintBottom_toTopOf="@id/scrv_type_answer"
        android:padding="10dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="あなたの回答"/>


    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>