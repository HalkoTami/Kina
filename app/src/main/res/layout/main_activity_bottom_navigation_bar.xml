    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bnv_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:orientation="horizontal"

        android:baselineAligned="false">
        <ImageView
            android:contentDescription="@string/title_tab_library"
            android:id="@+id/bnv_imv_tab_library"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"

            app:layout_constraintBottom_toTopOf="@id/bnv_txv_tab_library"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_flashcard"
            />
        <TextView
            android:id="@+id/bnv_txv_tab_library"
            android:textSize="11sp"


            android:text="ライブラリ"

            app:layout_constraintStart_toStartOf="@id/bnv_imv_tab_library"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bnv_imv_tab_library"
            app:layout_constraintEnd_toEndOf="@id/bnv_imv_tab_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="2dp"
            />
        <ImageView
            android:contentDescription="@string/title_tab_create"
            android:id="@+id/bnv_imv_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/bnv_imv_tab_library"
            app:layout_constraintEnd_toStartOf="@id/bnv_imv_tab_anki"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_add"/>
        <ImageView
            android:contentDescription="@string/title_tab_anki"
            android:id="@+id/bnv_imv_tab_anki"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bnv_txv_tab_anki"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:src="@drawable/icon_tab_anki"
            android:layout_marginEnd="50dp"
            />
        <TextView
            android:textSize="11sp"
            android:id="@+id/bnv_txv_tab_anki"
            app:layout_constraintStart_toStartOf="@id/bnv_imv_tab_anki"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bnv_imv_tab_anki"
            app:layout_constraintEnd_toEndOf="@id/bnv_imv_tab_anki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="2dp"
            android:text="暗記する"
            />
