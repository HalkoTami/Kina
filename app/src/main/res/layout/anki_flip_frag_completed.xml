<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:id="@+id/linLay_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="暗記アイテムを一周したよ!"
            android:background="@drawable/rec_corner_20"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/rec_corner_20"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imv_character_flip_completed"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/happy"
        app:layout_constraintTop_toBottomOf="@id/linLay_comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@drawable/rec_corner_10_stroke_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_character_flip_completed"
        >
        <ImageView
            android:layout_margin="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/circle"
            android:layout_gravity="start|top"
            app:tint="#C5BA9A"/>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>