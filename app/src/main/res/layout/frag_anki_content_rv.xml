<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/top_con_lay">

    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frameLay_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topBar_height">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingStart="10dp"
           android:paddingEnd="10dp">
           <ImageView
               android:id="@+id/imv_flip_or_anki_box"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/icon_card"/>
           <TextView
               android:id="@+id/txv_top_bar_title"
               android:paddingStart="10dp"
               android:paddingEnd="10dp"
               android:textSize="20sp"
               android:gravity="center_vertical"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="暗記中のカード"/>
           <TextView
               android:id="@+id/txv_top_bar_card_amount"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:textSize="11sp"
               android:text="11枚"
               android:gravity="bottom"/>
       </LinearLayout>

    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frameLay_top_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <include android:id="@+id/rv_binding"
            layout="@layout/full_rv"
            android:visibility="visible"/>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>