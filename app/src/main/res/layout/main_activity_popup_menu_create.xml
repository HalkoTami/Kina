<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gray_stroke_rectangle"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

        <FrameLayout
            android:id="@+id/imvnewfolder"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imvnewTangocho"
            android:contentDescription="@string/cd_create_new_folder"

            >
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_file"
                    tools:ignore="ContentDescription"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/icon_create_small"
                    tools:ignore="ContentDescription" />


        </FrameLayout>
        <FrameLayout
            android:id="@+id/imvnewTangocho"
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_tab_library"
            app:layout_constraintStart_toEndOf="@id/imvnewfolder"
            app:layout_constraintEnd_toStartOf="@id/imvnewCard"
            android:contentDescription="@string/cd_create_new_flashCard">
                <ImageView
                    android:rotation="50"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_tab_library"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/icon_create_small"
                    tools:ignore="ContentDescription" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/imvnewCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imvnewTangocho"
            android:layout_width="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_card"
            android:contentDescription="@string/cd_create_new_card">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_card"
                    tools:ignore="ContentDescription"
                     />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="end|bottom"
                    android:src="@drawable/icon_create_small"
                    tools:ignore="ContentDescription" />
        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>