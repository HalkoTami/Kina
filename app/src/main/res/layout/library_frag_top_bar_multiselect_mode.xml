<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"

    android:gravity="center_vertical"
    android:layout_gravity="center_vertical">


    <ImageView
        android:id="@+id/imv_close_multi_mode"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"
        />
    <ImageView
        android:layout_margin="7dp"
        android:id="@+id/imv_select_all"
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:src="@drawable/circle_selected"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/txv_selecting_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="10個選択中"
            android:gravity="center_vertical"

            android:textSize="20sp"/>
        <FrameLayout
            android:id="@+id/frameLay_multi_mode_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:elevation="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gray_stroke_rectangle">
            <include
                android:id="@+id/multi_select_menu_binding"
                layout="@layout/lib_item_top_bar_menu"/>
        </FrameLayout>

    </FrameLayout>


    <ImageView

        android:id="@+id/imv_change_menu_visibility"
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:src="@drawable/icon_menu"
        />


</androidx.appcompat.widget.LinearLayoutCompat>
