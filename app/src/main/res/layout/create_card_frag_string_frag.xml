<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:hint="@string/create_string_card_edt_front_title_hint"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/edt_front_title"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/gray_stroke_corner_10"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAutofill="no"
        android:inputType="text" />
    <EditText

        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/edt_front_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_stroke_corner_10"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_front_title"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:hint="@string/create_string_card_edt_back_title_hint"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/edt_back_title"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/gray_stroke_corner_10"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_front_content"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAutofill="no"
        android:inputType="text" />
    <EditText

        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/edt_back_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_stroke_corner_10"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edt_back_title"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAutofill="no"
        android:inputType="text" />

</androidx.constraintlayout.widget.ConstraintLayout>